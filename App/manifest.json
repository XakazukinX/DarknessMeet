{
  "description": "最も簡単な拡張機能",
  "manifest_version": 2,
  "name": "SimpleExtension",
  "version": "1.0",
  "icons": {
    "48": "src/chatget_off.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "jquery-3.5.1.min.js",
        "contents/contents.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background/background.js"
    ],
    "persistent": false,
    "permissions": [
      "tabs",
      "background",
      "http://localhost:9999/*",
      "ws://127.0.0.1:9999/ws"
    ]
  },
  "browser_action": {
    "default_title": "グレースケールLOVE！",
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "tabs",
    "background",
    "http://localhost:9999/*",
    "ws://127.0.0.1:9999/ws"
  ],
  "web_accessible_resources": [
    "main.wasm"
  ],
  "content_security_policy": "script-src 'self' 'wasm-eval'; object-src 'self'"
}